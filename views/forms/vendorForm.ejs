<script src="/js/vendorForm.js"></script>

<div class="container bg-white my-5">
    <div class="row justify-content-center p-4">
        <h1>Vendor</h1>
    </div>
    <div class="row justify-content-center p-3">
        <form method="POST" action="/post" style="width: 60%;">
            <div class="form-group">
                <label for="inputVendorName">Vendor Name</label>
                <input type="text" name="vendorName" class="form-control" id="inputVendorName" placeholder="Enter Vendor Name" required>
            </div>
            <div class="form-group">
                <label for="inputVendorCountry">Vendor Country</label>
                <input type="text" name='vendorCountry' class="form-control" id="inputVendorCountry" placeholder="Enter Vendor Country" required>
            </div>
            <div class="form-group">
                <label for="inputVendorEmployees">Vendor Employees</label>
                <input type="number" name='vendorEmployees' class="form-control" id="inputVendorEmployees" placeholder="Enter Machine Employees" required>
            </div>
            <button id="buttonSubmit" class="btn btn-primary mb-3 btn-block my-5" type="submit">Submit</button>
        </form>
    </div>
</div>
