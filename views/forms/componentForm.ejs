<script src="/js/componentForm.js"></script>

<div class="container bg-white my-5">
    <div class="row justify-content-center p-4">
        <h1>Component</h1>
    </div>
    <div class="row justify-content-center p-3">
        <form method="POST" action="/post" style="width: 60%;">
            <div class="form-group">
                <label for="inputComponentName">Component Name</label>
                <input type="text" name='componentName' class="form-control" id="inputComponentName" placeholder="Enter Component Name" required>
            </div>
            <div class="form-group">
                <label for="inputComponentSize">Component Size</label>
                <input type="number" name='componentSize' class="form-control" id="inputComponentSize" placeholder="Enter Component Size" step="0.01" required>
            </div>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="componentList">Vendor</label>
                    </div>
                    <select class="custom-select" id="vendorList" name="vendorList">
                        <option selected>Choose vendor...</option>
                    </select>
                    <div class="input-group-append">
                        <button id="buttonAdd" class="btn btn-outline-success" type="button">Add</button>
                    </div>
                </div>
            </div>
            <!-- Machine component list  -->
            <ul id="list"></ul>
            
            <button id="buttonSubmit" class="btn btn-primary mb-3 btn-block my-3" type="submit">Submit</button>
        </form>
    </div>
</div>